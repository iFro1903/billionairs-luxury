# Stripe Configuration
# Replace with your actual keys from https://dashboard.stripe.com/apikeys

# TEST Keys (für Entwicklung)
STRIPE_TEST_SECRET_KEY=sk_test_REPLACE_WITH_YOUR_SECRET_KEY
STRIPE_TEST_PUBLISHABLE_KEY=pk_test_REPLACE_WITH_YOUR_PUBLISHABLE_KEY

# LIVE Keys (für Produktion - NIEMALS committen!)
STRIPE_LIVE_SECRET_KEY=sk_live_REPLACE_WITH_YOUR_LIVE_SECRET_KEY
STRIPE_LIVE_PUBLISHABLE_KEY=pk_live_REPLACE_WITH_YOUR_LIVE_PUBLISHABLE_KEY

# Environment
NODE_ENV=production
PORT=3000

# Domain Configuration
DOMAIN=https://billionairs.luxury
SUCCESS_URL=https://billionairs.luxury/success
CANCEL_URL=https://billionairs.luxury/payment

# Webhook Secret (von Stripe Dashboard)
STRIPE_WEBHOOK_SECRET=whsec_REPLACE_WITH_YOUR_WEBHOOK_SECRET

# Admin Security (Web Crypto API Hash - Edge Runtime kompatibel)
# Generate with: node -e "const crypto = require('crypto'); const password = 'YOUR_PASSWORD'; const uuid = crypto.randomUUID(); const hash = crypto.createHash('sha256').update(password + uuid).digest('hex'); console.log('ADMIN_PASSWORD_HASH=' + uuid + '$' + hash);"
# Example (replace with your own!): ADMIN_PASSWORD_HASH=63f2ccab-92fe-4020-8d1c-d2ee2506ca25$265fdbc7fa60aa9f93765f22196362a1af96f73a119c619af7f5680dda9f3fed
ADMIN_PASSWORD_HASH=your-uuid-here$your-hash-here

# Cron Job Security
# Generate with: node -e "console.log(crypto.randomUUID())"
CRON_SECRET=your-cron-secret-uuid-here

# Upstash Redis (für Rate Limiting - optional)
# Sign up at https://console.upstash.com/
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token-here

# Cryptocurrency Configuration (optional)
BITCOIN_WALLET=YOUR_BITCOIN_WALLET_ADDRESS
ETHEREUM_WALLET=YOUR_ETHEREUM_WALLET_ADDRESS
USDT_WALLET=YOUR_USDT_WALLET_ADDRESS

# Sentry Error Monitoring (optional but recommended for production)
# Sign up at https://sentry.io and create a new project
# Get your DSN from: Settings → Projects → [Your Project] → Client Keys (DSN)
# Example: https://abc123def456@o123456.ingest.sentry.io/7890123
SENTRY_DSN=

# Email Configuration (optional - for transactional emails)
# Use SendGrid, AWS SES, or Mailgun
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your-email-api-key
EMAIL_FROM=noreply@billionairs.luxury

# Chat Encryption Key (für End-to-End Verschlüsselung der CEO-Chat Nachrichten)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# WICHTIG: Ohne diesen Key werden Nachrichten unverschlüsselt gespeichert!
CHAT_ENCRYPTION_KEY=

# Database Configuration (Neon PostgreSQL)
# Get from: https://console.neon.tech → Your Project → Connection Details
DATABASE_URL=postgresql://user:password@host/database?sslmode=require
