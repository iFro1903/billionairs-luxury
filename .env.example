# Stripe Configuration
# Replace with your actual keys from https://dashboard.stripe.com/apikeys

# TEST Keys (für Entwicklung)
STRIPE_TEST_SECRET_KEY=sk_test_REPLACE_WITH_YOUR_SECRET_KEY
STRIPE_TEST_PUBLISHABLE_KEY=pk_test_REPLACE_WITH_YOUR_PUBLISHABLE_KEY

# LIVE Keys (für Produktion - NIEMALS committen!)
STRIPE_LIVE_SECRET_KEY=sk_live_REPLACE_WITH_YOUR_LIVE_SECRET_KEY
STRIPE_LIVE_PUBLISHABLE_KEY=pk_live_REPLACE_WITH_YOUR_LIVE_PUBLISHABLE_KEY

# Environment
NODE_ENV=production
PORT=3000

# Domain Configuration
DOMAIN=https://billionairs.luxury
SUCCESS_URL=https://billionairs.luxury/success
CANCEL_URL=https://billionairs.luxury/payment

# Webhook Secret (von Stripe Dashboard)
STRIPE_WEBHOOK_SECRET=whsec_REPLACE_WITH_YOUR_WEBHOOK_SECRET

# Admin Security (Web Crypto API Hash - Edge Runtime kompatibel)
# Generate with: node generate-hash.js
ADMIN_PASSWORD_HASH=your-uuid-here$your-hash-here

# Cron Job Security
# Generate with: node -e "console.log(crypto.randomUUID())"
CRON_SECRET=your-cron-secret-uuid-here

# Cryptocurrency Configuration (optional)
BITCOIN_WALLET=YOUR_BITCOIN_WALLET_ADDRESS
ETHEREUM_WALLET=YOUR_ETHEREUM_WALLET_ADDRESS
USDT_WALLET=YOUR_USDT_WALLET_ADDRESS
